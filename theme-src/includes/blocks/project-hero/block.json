{
  "apiVersion": 3,
  "name": "fnesl/project-hero",
  "title": "Project Hero",
  "category": "layout",
  "icon": "format-image",
  "description": "Hero block with background image or video support and fallback image.",
  "supports": {
    "align": ["full", "wide"],
    "html": false
  },
  "attributes": {
    "backgroundType": {
      "type": "string",
      "default": "image"
    },
    "backgroundImage": {
      "type": "object"
    },
    "backgroundVideo": {
      "type": "object"
    },
    "fallbackImage": {
      "type": "object"
    },
    "blurLevel": { "type": "number", "default": 1 },
    "showOverlay": { "type": "boolean", "default": true },
    "verticalAlign": {
      "type": "string",
      "default": "bottom"
    }
  },
  "editorScript": "file:./index.js",
  "viewStyle": "file:./index.css",
  "editorStyle": "file:./index.css"
}
