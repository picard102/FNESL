{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        { "slug": "primary",   "color": "var(--color-primary-500)",   "name": "Primary" },
        { "slug": "secondary", "color": "var(--color-secondary-500)", "name": "Secondary" },
        { "slug": "neutral",   "color": "var(--color-neutral-500)",   "name": "Neutral" },
        { "slug": "background","color": "var(--color-neutral-50)",    "name": "Background" },
        { "slug": "text",      "color": "var(--color-neutral-900)",   "name": "Text" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"IBM Plex Sans\", ui-sans-serif, system-ui, sans-serif",
          "name": "IBM Plex Sans",
          "slug": "ibm-plex-sans"
        },
        {
          "fontFamily": "\"IBM Plex Serif\", ui-serif, Georgia, serif",
          "name": "IBM Plex Serif",
          "slug": "ibm-plex-serif"
        }
      ],
      "fontSizes": [
        { "slug": "small", "name": "Small", "size": "14px" },
        { "slug": "medium", "name": "Medium", "size": "18px" },
        { "slug": "large", "name": "Large", "size": "24px" },
        { "slug": "x-large", "name": "X-Large", "size": "32px" }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "spacingSizes": [
        { "slug": "small", "name": "Small", "size": "8px" },
        { "slug": "medium", "name": "Medium", "size": "16px" },
        { "slug": "large", "name": "Large", "size": "32px" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "#ffffff",
      "text": "#111111"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--ibm-plex-sans)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": 1.6
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--ibm-plex-serif)"
        }
      },
      "button": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--ibm-plex-sans)"
        }
      },
      "quote": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--ibm-plex-serif)"
        }
      },
      "pullquote": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--ibm-plex-serif)"
        }
      },
      "code": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)"
        }
      }
    }
  },
  "customTemplates": [],
  "templateParts": []
}
