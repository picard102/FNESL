{
  "name": "fnesl-build",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ../theme-dist",

    "vite:build": "vite build --config ./vite.config.js",
    "vite:watch": "vite build --watch --config ./vite.config.js",

    "build:blocks": "rollup -c ./rollup.blocks.config.mjs",
    "dev:blocks": "rollup -c ./rollup.blocks.config.mjs --watch",

    "copy": "node ./copy.js",
    "copy:watch": "node ./copy.js --watch",

    "sprite": "node ./sprite.js",
    "sprite:watch": "node ./sprite.js --watch",

    "serve": "node ./bs.js",

    "build": "npm-run-all clean vite:build build:blocks copy sprite",

    "start": "npm-run-all clean vite:build build:blocks copy sprite --parallel vite:watch dev:blocks copy:watch sprite:watch serve"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.13",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-nesting": "^13.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.93.2",
    "sass-embedded": "^1.93.2",
    "svg-sprite": "^2.0.4",
    "tailwindcss": "^4.1.13",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "postcss-import": "^16.1.1"
  }
}
