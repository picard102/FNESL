{
  "name": "fnesl-build",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ../theme-dist",
    "dev": "vite build --watch --config ./vite.config.js",
    "build": "npm-run-all clean vite:build copy sprite",
    "vite:build": "vite build --config ./vite.config.js",
    "copy": "node ./copy.js",
    "copy:watch": "node ./copy.js --watch",
    "sprite": "node ./sprite.js",
    "sprite:watch": "node ./sprite.js --watch",
    "serve": "node ./bs.js",
    "start": "npm-run-all clean vite:build copy sprite --parallel dev copy:watch sprite:watch serve"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "fs-extra": "^11.3.2",
    "npm-run-all": "^4.1.5",
    "sass-embedded": "^1.93.2",
    "svg-sprite": "^2.0.4",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^1.0.6",
    "vite-plugin-svg-sprite": "^0.6.3"
  }
}
